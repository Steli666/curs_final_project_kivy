<Register>:

    MDFloatLayout:
        Carousel:
            id: slide
            MDFloatLayout:
                MDTextField:
                    id: username
                    hint_text: "Username"
                    size_hint_x: .8
                    pos_hint: {"center_x": .5, "center_y": .48}
                MDTextField:
                    id: email1
                    hint_text: "Email"
                    size_hint_x: .8
                    pos_hint: {"center_x": .5, "center_y": .36}
                MDRaisedButton:
                    text: "NEXT"
                    size_hint_x: .8
                    pos_hint: {"center_x": .5, "center_y": .2}
                    on_release: root.next()
            MDFloatLayout:
                MDTextField:
                    id: password1
                    hint_text: "Password"
                    size_hint_x: .8
                    pos_hint: {"center_x": .5, "center_y": .48}
                    password: True
                MDTextField:
                    id: confirm_password
                    hint_text: "Confirm Password"
                    size_hint_x: .8
                    pos_hint: {"center_x": .5, "center_y": .36}
                    password: True
                MDRaisedButton:
                    text: "PREVIOUS"
                    size_hint_x: .39
                    pos_hint: {"center_x": .3, "center_y": .2}
                    on_release: root.previous()
                MDRaisedButton:
                    text: "SUBMIT"
                    size_hint_x: .39
                    pos_hint: {"center_x": .7, "center_y": .2}
                    on_release: root.register()
        MDLabel:
            text: "Register Form"
            bold: True
            pos_hint: {"center_x": .71, "center_y": .8}
            font_style: "H4"
        MDLabel:
            id: email
            text: "Email"
            bold: True
            pos_hint: {"center_x": .68, "center_y": .7}
            font_style: "H6"
            theme_text_color: "Primary"
        MDIconButton:
            id: Email
            icon: "numeric-1-circle"
            pos_hint: {"center_x": .24, "center_y": .65}
            user_font_size: "35sp"
            theme_text_color: "Custom"
        MDProgressBar:
            # size_hint: .1
            pos_hint: {"center_x": .42, "center_y": .65}
        MDLabel:
            id: password
            text: "Password"
            bold: True
            pos_hint: {"center_x": .9, "center_y": .7}
            font_style: "H6"
            theme_text_color: "Primary"
        MDIconButton:
            id: Password
            icon: "numeric-2-circle"
            pos_hint: {"center_x": .5, "center_y": .65}
            user_font_size: "35sp"
            theme_text_color: "Custom"
        MDProgressBar:
            # size_hint: .1
            pos_hint: {"center_x": .58, "center_y": .65}
        MDLabel:
            id: submit
            text: "Submit"
            bold: True
            pos_hint: {"center_x": 1.2, "center_y": .7}
            font_style: "H6"
            theme_text_color: "Primary"
        MDIconButton:
            id: Submit
            icon: "numeric-3-circle"
            pos_hint: {"center_x": .76, "center_y": .65}
            user_font_size: "35sp"
            theme_text_color: "Custom"

