<AddReview>:

    MDTextField:
        id: search_field
        hint_text: "Search"
        size_hint_x: None
        width: "265dp"
        pos_hint: {'center_x': 0.45, 'center_y': 0.8}

    MDFloatingActionButton:
        icon: "magnify"
        pos_hint: {'center_x': 0.85, 'center_y': 0.8}
        md_bg_color: app.theme_cls.primary_color
        on_release: root.search(search_field.text)
        type: "small"

    ScrollView:
        size_hint: 1, 0.8
        pos_hint: {"top": 0.7}
        MDList:
            id: movie_list

    Base:
        id: BaseLayout